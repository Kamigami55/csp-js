{
  "name": "@csp-js/cli",
  "version": "0.1.0",
  "description": "Command-line tool for managing CSP service definitions and data updates",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "csp-cli": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "prepublishOnly": "npm run lint && npm run check-types"
  },
  "keywords": [
    "csp",
    "content-security-policy",
    "cli",
    "automation",
    "service-updates"
  ],
  "author": "Eason",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/easonz/csp-js.git",
    "directory": "packages/csp-cli"
  },
  "bugs": {
    "url": "https://github.com/easonz/csp-js/issues"
  },
  "homepage": "https://csp-js.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/easonz"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "dependencies": {
    "@csp-js/data": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^12.0.0",
    "semver": "^7.6.0",
    "got": "^14.0.0",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/inquirer": "^9.0.7",
    "@types/semver": "^7.5.8",
    "eslint": "^9.29.0",
    "tsup": "^8.0.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  }
}