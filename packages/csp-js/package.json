{
  "name": "csp-js",
  "version": "0.1.0",
  "description": "Generate Content Security Policy headers for popular web services and libraries",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "csp",
    "content-security-policy",
    "security",
    "web",
    "headers",
    "xss",
    "javascript",
    "typescript"
  ],
  "author": "Eason",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/easonz/csp-js.git",
    "directory": "packages/csp-js"
  },
  "bugs": {
    "url": "https://github.com/easonz/csp-js/issues"
  },
  "homepage": "https://github.com/easonz/csp-js#readme",
  "dependencies": {
    "@csp-js/data": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.29.0",
    "tsup": "^8.0.0",
    "typescript": "5.8.2",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}